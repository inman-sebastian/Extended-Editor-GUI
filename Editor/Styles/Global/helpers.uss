}

.my-16 {
    margin-top: 16px;
    margin-bottom: 16px;
}

.grid {
    flex-direction: row;
    flex-wrap: wrap;
    display: flex;
}

.grid-cols-4 > VisualElement {
    width: 25%;
}

.gap-4 {
    padding: 4px;
    margin: -4px;
}

.gap-4 > VisualElement {
    padding: 4px;
}

.grid-cols-8 > VisualElement {
    width: 12.5%;
}

.gap-8 {
    padding: 8px;
    margin: -8px;
}

.gap-4 > VisualElement {
    padding: 8px;
}
